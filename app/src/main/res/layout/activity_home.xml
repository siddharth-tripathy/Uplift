<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Home"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="10dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:gravity="right">
            <ImageView
                android:layout_width="54dp"
                android:layout_height="34dp"
                android:background="@drawable/app_logo"
                android:layout_gravity="bottom"/>
        </LinearLayout>

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:fontFamily="cursive"
            android:gravity="left"
            android:padding="5dp"
            android:textStyle="bold"
            android:text="uplift"
            android:textColor="#4776e6"
            android:textSize="24sp" />

        <ImageView
            android:id="@+id/menu"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/menu"
            android:layout_margin="10dp"/>




    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#50C0C0C0" />

    <RelativeLayout
        android:id="@+id/top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            tools:ignore="UselessParent">
            <TextView
                android:id="@+id/greetings"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="नमस्ते,"
                android:textColor="#2F2C3E"
                android:textSize="27sp" />

            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/ubuntu_light"
                android:text="Name"
                android:textColor="#2F2C3E"
                android:textSize="28sp"
                android:textStyle="bold" />
        </LinearLayout>
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="20dp"
                android:orientation="vertical"
                app:cardCornerRadius="20dp"
                tools:layout_editor_absoluteX="5dp"
                tools:layout_editor_absoluteY="5dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/background_gradient"/>


                <TextView
                    android:layout_width="125dp"
                    android:layout_height="160dp"
                    android:layout_margin="10dp"
                    android:gravity="bottom"
                    android:text="दिन-प्रतिदिन \nके शब्द"
                    android:fontFamily="cursive"
                    android:textColor="#fff"
                    android:textSize="25dp"/>

                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="110dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="40dp"
                        android:orientation="horizontal"
                        tools:layout_editor_absoluteX="5dp"
                        tools:layout_editor_absoluteY="5dp">

                        <ImageView
                            android:id="@+id/tools"
                            android:layout_width="120dp"
                            android:layout_height="150dp"
                            android:layout_marginLeft="7dp"
                            android:layout_marginTop="15dp"
                            android:layout_marginRight="7dp"
                            android:layout_marginBottom="15dp"
                            android:background="@drawable/tools"/>

                        <ImageView
                            android:id="@+id/symbol"
                            android:layout_width="120dp"
                            android:layout_height="150dp"
                            android:layout_marginLeft="7dp"
                            android:layout_marginTop="15dp"
                            android:layout_marginRight="7dp"
                            android:layout_marginBottom="15dp"
                            android:background="@drawable/symbol" />

                        <ImageView
                            android:id="@+id/logistics"
                            android:layout_width="120dp"
                            android:layout_height="150dp"
                            android:layout_marginLeft="7dp"
                            android:layout_marginTop="15dp"
                            android:layout_marginRight="7dp"
                            android:layout_marginBottom="15dp"
                            android:background="@drawable/logistics" />

                        <ImageView
                            android:id="@+id/quality"
                            android:layout_width="120dp"
                            android:layout_height="150dp"
                            android:layout_marginLeft="7dp"
                            android:layout_marginTop="15dp"
                            android:layout_marginRight="7dp"
                            android:layout_marginBottom="15dp"
                            android:background="@drawable/quality" />

                        <ImageView
                            android:id="@+id/safety"
                            android:layout_width="120dp"
                            android:layout_height="150dp"
                            android:layout_marginLeft="7dp"
                            android:layout_marginTop="15dp"
                            android:layout_marginRight="34dp"
                            android:layout_marginBottom="15dp"
                            android:background="@drawable/safety" />
                    </LinearLayout>
                </HorizontalScrollView>
            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="15dp"
                android:text="पाठ्यक्रम"
                android:textColor="@color/black"
                android:textSize="23dp"/>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@color/white">
                    <androidx.cardview.widget.CardView
                        android:id="@+id/alphabets"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardBackgroundColor="@color/white"
                        app:cardCornerRadius="10dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginTop="20dp">
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/alpha_logo"
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:layout_marginStart="10dp"
                                android:layout_marginTop="10dp"
                                android:layout_marginEnd="10dp"
                                android:layout_marginBottom="10dp"
                                android:background="@drawable/alpha_logo" />

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_toRightOf="@id/alpha_logo"
                                android:layout_centerVertical="true"
                                android:orientation="vertical"
                                android:layout_marginLeft="20dp">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="प्रथम स्तर"
                                    android:textStyle="bold"
                                    android:textColor="#4776e6"
                                    android:textSize="13dp"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="अक्षर"
                                    android:textSize="23dp"
                                    android:textColor="@color/black"/>


                            </LinearLayout>

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:layout_marginRight="25dp"
                                android:background="@drawable/baseline_keyboard_arrow_right_24"/>

                        </RelativeLayout>


                    </androidx.cardview.widget.CardView>


                    <androidx.cardview.widget.CardView
                        android:id="@+id/words"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardBackgroundColor="@color/white"
                        app:cardCornerRadius="10dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginTop="20dp">
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/word_logo"
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:layout_marginStart="10dp"
                                android:layout_marginTop="10dp"
                                android:layout_marginEnd="10dp"
                                android:layout_marginBottom="10dp"
                                android:background="@drawable/words_logo" />

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_toRightOf="@id/word_logo"
                                android:layout_centerVertical="true"
                                android:orientation="vertical"
                                android:layout_marginLeft="20dp">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="दूसरा स्तर"
                                    android:textStyle="bold"
                                    android:textColor="#4776e6"
                                    android:textSize="13dp"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="शब्द"
                                    android:textSize="23dp"
                                    android:textColor="@color/black"/>


                            </LinearLayout>

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:layout_marginRight="25dp"
                                android:background="@drawable/baseline_keyboard_arrow_right_24"/>

                        </RelativeLayout>


                    </androidx.cardview.widget.CardView>

                    <LinearLayout
                        android:id="@+id/view_words"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:cardBackgroundColor="@color/white">
                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

<!--                                <ImageView-->
<!--                                    android:id="@+id/sent_logo"-->
<!--                                    android:layout_width="50dp"-->
<!--                                    android:layout_height="50dp"-->
<!--                                    android:layout_marginStart="10dp"-->
<!--                                    android:layout_marginTop="10dp"-->
<!--                                    android:layout_marginEnd="10dp"-->
<!--                                    android:layout_marginBottom="10dp"-->
<!--                                    android:background="@drawable/sent_logo" />-->

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerVertical="true"
                                    android:orientation="vertical"
                                    android:layout_marginLeft="20dp">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="चौथा स्तर"
                                        android:textStyle="bold"
                                        android:textColor="#4776e6"
                                        android:textSize="13dp"/>

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="मूक अक्षर"
                                        android:textSize="23dp"
                                        android:textColor="@color/black"/>


                                </LinearLayout>

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentRight="true"
                                    android:layout_centerVertical="true"
                                    android:layout_marginRight="25dp"
                                    android:background="@drawable/baseline_keyboard_arrow_right_24"/>

                            </RelativeLayout>


                        </androidx.cardview.widget.CardView>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="#50C0C0C0" />



                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:cardBackgroundColor="@color/white">
                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

<!--                                <ImageView-->
<!--                                    android:id="@+id/sent_logo"-->
<!--                                    android:layout_width="50dp"-->
<!--                                    android:layout_height="50dp"-->
<!--                                    android:layout_marginStart="10dp"-->
<!--                                    android:layout_marginTop="10dp"-->
<!--                                    android:layout_marginEnd="10dp"-->
<!--                                    android:layout_marginBottom="10dp"-->
<!--                                    android:background="@drawable/sent_logo" />-->

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerVertical="true"
                                    android:orientation="vertical"
                                    android:layout_marginLeft="20dp">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="चौथा स्तर"
                                        android:textStyle="bold"
                                        android:textColor="#4776e6"
                                        android:textSize="13dp"/>

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="होमोफोन्स"
                                        android:textSize="23dp"
                                        android:textColor="@color/black"/>


                                </LinearLayout>

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentRight="true"
                                    android:layout_centerVertical="true"
                                    android:layout_marginRight="25dp"
                                    android:background="@drawable/baseline_keyboard_arrow_right_24"/>

                            </RelativeLayout>


                        </androidx.cardview.widget.CardView>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="#50C0C0C0" />


                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:cardBackgroundColor="@color/white">
                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

<!--                                <ImageView-->
<!--                                    android:id="@+id/sent_logo"-->
<!--                                    android:layout_width="50dp"-->
<!--                                    android:layout_height="50dp"-->
<!--                                    android:layout_marginStart="10dp"-->
<!--                                    android:layout_marginTop="10dp"-->
<!--                                    android:layout_marginEnd="10dp"-->
<!--                                    android:layout_marginBottom="10dp"-->
<!--                                    android:background="@drawable/sent_logo" />-->

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerVertical="true"
                                    android:orientation="vertical"
                                    android:layout_marginLeft="20dp">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="चौथा स्तर"
                                        android:textStyle="bold"
                                        android:textColor="#4776e6"
                                        android:textSize="13dp"/>

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="विषमार्थी शब्द"
                                        android:textSize="23dp"
                                        android:textColor="@color/black"/>


                                </LinearLayout>

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentRight="true"
                                    android:layout_centerVertical="true"
                                    android:layout_marginRight="25dp"
                                    android:background="@drawable/baseline_keyboard_arrow_right_24"/>

                            </RelativeLayout>


                        </androidx.cardview.widget.CardView>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="#50C0C0C0" />




                    </LinearLayout>



                    <androidx.cardview.widget.CardView
                        android:id="@+id/grammar"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardBackgroundColor="@color/white"
                        app:cardCornerRadius="10dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginTop="20dp">
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/gram_logo"
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:layout_marginStart="10dp"
                                android:layout_marginTop="10dp"
                                android:layout_marginEnd="10dp"
                                android:layout_marginBottom="10dp"
                                android:background="@drawable/gram_logo" />

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_toRightOf="@id/gram_logo"
                                android:layout_centerVertical="true"
                                android:orientation="vertical"
                                android:layout_marginLeft="20dp">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="तीसरे स्तर"
                                    android:textStyle="bold"
                                    android:textColor="#4776e6"
                                    android:textSize="13dp"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="व्याकरण"
                                    android:textSize="23dp"
                                    android:textColor="@color/black"/>

                            </LinearLayout>

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:layout_marginRight="25dp"
                                android:background="@drawable/baseline_keyboard_arrow_right_24"/>

                        </RelativeLayout>
                    </androidx.cardview.widget.CardView>


                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardBackgroundColor="@color/white"
                        app:cardCornerRadius="10dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginBottom="20dp">
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/sent_logo"
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:layout_marginStart="10dp"
                                android:layout_marginTop="10dp"
                                android:layout_marginEnd="10dp"
                                android:layout_marginBottom="10dp"
                                android:background="@drawable/sent_logo" />

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_toRightOf="@id/sent_logo"
                                android:layout_centerVertical="true"
                                android:orientation="vertical"
                                android:layout_marginLeft="20dp">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="चौथा स्तर"
                                    android:textStyle="bold"
                                    android:textColor="#4776e6"
                                    android:textSize="13dp"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="वाक्यांश"
                                    android:textSize="23dp"
                                    android:textColor="@color/black"/>


                            </LinearLayout>

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:layout_marginRight="25dp"
                                android:background="@drawable/baseline_keyboard_arrow_right_24"/>

                        </RelativeLayout>


                    </androidx.cardview.widget.CardView>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
